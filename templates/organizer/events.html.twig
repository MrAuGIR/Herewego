{% extends 'base.html.twig' %}

{% block title %}Évênements
	{{ user.firstName }}
	{{ user.lastName }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="card text-center mt-3">
			<div class="card-header mb-5">
				<ul class="nav nav-tabs card-header-tabs">
					<li class="nav-item w-25">
						<a class="nav-link" aria-current="true" href="{{path('organizer_profil')}}">Profil</a>
					</li>
					<li class="nav-item w-25">
						<a class="nav-link active" href="{{path('organizer_events')}}">Évênements</a>
					</li>
					<li class="nav-item w-25">
						<a class="nav-link" href="{{path('organizer_history')}}">Historique</a>
					</li>
					<li class="nav-item w-25">
						<a class="nav-link" href="{{path('organizer_stats')}}">Statistiques</a>
					</li>
				</ul>
			</div>
			<div class="card-body">
				<a class="btn btn-success d-block w-50 m-auto mb-5" href="{{ path('event_create') }}" role="button">Créer un Évênement</a>

				<h1 class="mb-5 text-center">Liste de mes Évênements à venir</h1>

				<div class="mb-3">
					<a class="btn btn-secondary" href="{{ asset('csv/' ~ fileName) }}" download="{{ fileName }}">Exporter tous les Évênements à venir au format CSV</a>
				</div>
				<div class="accordion" id="accordionExample">
					<div class="accordion" id="accordionExample">
						{% for event in events %}
							<div class="accordion-item">
								<h2 class="accordion-header" id="heading{{event.id}}">
									<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{event.id}}" aria-expanded="true" aria-controls="collapse{{event.id}}">
										<div class="row w-100">
											<div class="col-5">
												<strong>{{event.title}}</strong></div>
											<div class="col-4">Commence le
												{{ event.startedAt | date('d/m/Y') }}</div>
										</div>
									</button>
								</h2>
								<div id="collapse{{event.id}}" class="accordion-collapse collapse" aria-labelledby="heading{{event.id}}" data-bs-parent="#accordionExample">
									<div class="accordion-body">
										<div class="row">
											<div class="col-12 col-md-6">
												<div class="bg-secondary py-5">
													infos Évênement
												</div>
											</div>
											<div class="col-12 col-md-6">
												<div class="mb-3">												
													<a class="btn btn-primary" href="{{ path('event_show', {event_id: event.id}) }}" role="button">Voir la page de l'event</a>
													<a class="btn btn-warning" href="{{ path('event_edit', {event_id: event.id}) }}" role="button">Modifier l'event</a>
												</div>
												<p>nombre de vues :
													{{ event.countViews }}</p>
												<p>nombre de transports organisés :
													{{ event.transports | length }}</p>
												<p>nombre de paticipants inscrits :
													{{ event.participations | length }}</p>
												<p>le tag de l'event à partager :
													...</p>
														
											</div>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
