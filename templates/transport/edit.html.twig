						</nav>
					</nav>
				</nav>
			</div>
		</div>
		<div class="col-10">
			{{form_start(form)}}
			<div data-bs-spy="scroll" data-bs-target="#navbar" data-bs-offset="0" tabindex="0">
				<div id="item-1" class="row">
					<h3>Aller</h3>
				</div>
				<div class="row make-transport">
					<div class="col-6">
						<h5 id="item-1-1">A partir d'où ?</h5>
					</div>
					<div class="col-6">
						<div class="form-floating mb-3">
							{{form_row(form.localisation_start, {'class':'form-control'})}}
						</div>
					</div>
				</div>
				<div class="row make-transport">
					<div class="col-6">
						<h5 id="item-1-1">Quand ?</h5>
					</div>
					<div class="col-6">
						<div class="form-floating mb-3">
							{{form_row(form.goStartedAt, {'class':'form-control'})}}
						</div>
					</div>
				</div>
				<div class="row make-transport">
					<div class="col-6">
						<h5 id="item-1-1">Jusqu'a ?</h5>
						<span>Ville de l'event : {{event.localisation.city.cityName}}</span></br>
						<span>adresse de l'event : {{event.localisation.adress}}</span>
					</div>
					<div class="col-6">
						<div class="form-floating mb-3">
							{{form_row(form.goEndedAt, {'class':'form-control'})}}
						</div>
					</div>
				</div>
				<div id="item-1" class="row">
					<h3>Retour</h3>
				</div>
				<div class="row make-transport">
					<div class="col-6">
						<h5 id="item-1-1">Adresse de retour?</h5>
					</div>
					<div class="col-6">
						<div class="form-floating mb-3">
							{{form_row(form.localisation_return, {'class':'form-control'})}}
						</div>
					</div>
				</div>
				<div class="row make-transport">
					<div class="col-6">
						<h5 id="item-1-1">Quand ?</h5>
					</div>
					<div class="col-6">
						<div class="form-floating mb-3">
							{{form_row(form.returnStartedAt, {'class':'form-control'})}}
						</div>
					</div>
				</div>
				<div class="row make-transport">
					<div class="col-6">
						<h5 id="item-1-1">heure d'arrivé ?</h5>
					</div>
					<div class="col-6">
						<div class="form-floating mb-3">
							{{form_row(form.returnEndedAt, {'class':'form-control'})}}
						</div>
					</div>
				</div>
				<div id="item-1" class="row">
					<h3>Détails</h3>
				</div>
				<div class="row make-transport">
					<div class="col-6">
						<h5 id="item-1-1">Prix des places</h5>
					</div>
					<div class="col-6">
						<div class="form-floating mb-3">
							{{form_row(form.placePrice, {'class':'form-control'})}}
						</div>
					</div>
				</div>
				<div class="row make-transport">
					<div class="col-6">
						<h5 id="item-1-1">Nombre de places</h5>
					</div>
					<div class="col-6">
						<div class="form-floating mb-3">
							{{form_row(form.totalPlace, {'class':'form-control'})}}
						</div>
					</div>
				</div>
				<div class="row make-transport">
					<div class="col-6">
						<h5 id="item-1-1">Une courte description</h5>
					</div>
					<div class="col-6">
						<div class="form-floating mb-3">
							{{form_row(form.commentary, {'class':'form-control'})}}
						</div>
					</div>
				</div>
			</div>
			<input type="submit" name="submit" value="Creer">
			{{form_end(form)}}
		</div>	
		
{% endblock %}
