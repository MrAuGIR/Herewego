{% set locale = app.request.locale %}
<!DOCTYPE html>
<html lang="{{ locale }}">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Herewego{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="icon" type="image/png" href="{{ asset('favicon.ico') }}" />
            <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('styles/style.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/mainStyle.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/style_jd.css') }}">
            <link rel="stylesheet" href="{{ asset('styles/style-card.css') }}">
        {% endblock %}
    </head>
    <body>
        <header>
        {% block header %}
            {% include "shared/_navbar.html.twig" %}            
        {% endblock %}
        </header>
        
            <main>
                {% block messages %}
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            {% for label,messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{label}}">
                                        {{message}}
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% endblock %}
                

        {% block body %}{% endblock %}
                
            </main>
        <footer class="footer mt-auto">
            {% block footer %}
            <div class="container">
                <div class="row top-footer">
                    <div class="col-12 col-lg-4 order-lg-1">
                        <nav class="nav flex-column align-items-center justify-content-center h-100">
                            <a class="nav-link" href="{{path('faq_index')}}">FAQ</a>
                            <a class="nav-link" href="{{path('plan')}}" title="Plan du site">Plan du site</a>
                        </nav>
                    </div>
                    <div class="col-12 order-first order-lg-2 col-lg-4 d-flex justify-content-center">
                        <div class="picture logo-footer">
                            <img src="{{asset('img/hwg_footer.png')}}" alt="logo du site">
                        </div>
                    </div>
                    <div class="col-12 col-lg-4 order-lg-3">
                        <nav class="nav flex-column align-items-center justify-content-center h-100">
                            <a class="nav-link" href="{{path('whoAreWe')}}" title="Mentions légales">Qui somme nous</a>
                            <a class="nav-link" href="{{path('cgu')}}" title="condition general d'utilisation">CGU</a>
                            <a class="nav-link" href="{{path('legalNotice')}}" title="Mentions légales">Mentions légales</a>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="bottom-footer py-3">
                <div class="container">
                    <div class="row">
                        <div class="col-12 d-flex flex-column align-items-center">
                            <p>HereWeGo 2021 &copy</p>
                            <p>HereWeGo est site de gestion de covoiturages entre personnes vers des évènements programmés</p>
                            <p>Aurélien Girard - Jérémy Dallain - <a class="text-primary" target="_blank" href="https://github.com/MrAuGIR/Herewego" title="github de projet">github</a></p>
                        </div>
                    </div>
                </div>
            </div>
            {% endblock %}
        </footer>
        {% block javascripts %}
            <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
        {% endblock %}        
    </body>
</html>
